<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="smv.lovearthstudio.com.svmproj.activity.MainActivity"
    android:background="@drawable/mccree">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="100dp" />
    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btn_collection_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="collect data"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="150"
        app:sub_btn_line_color="@color/green"
        app:sub_btn_ripple_color="@color/tianyi"
        app:sub_btn_tick_color="@color/white" />
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">



        <com.spark.submitbutton.SubmitButton
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="train"
            android:textColor="@color/gray"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="150"
            app:sub_btn_line_color="@color/green"
            app:sub_btn_ripple_color="@color/tianyi"
            app:sub_btn_tick_color="@color/white" />

        <com.spark.submitbutton.SubmitButton
            android:id="@+id/btn_real"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="test"
            android:textColor="@color/gray"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="150"
            app:sub_btn_line_color="@color/green"
            app:sub_btn_ripple_color="@color/tianyi"
            app:sub_btn_tick_color="@color/white" />
       <!-- <Button
            android:id="@+id/btn_collection_data"
            style="@style/SvmBtnStyle"
            android:text="collect data" />

        <Button
            android:id="@+id/btn_test"
            style="@style/SvmBtnStyle"
            android:text="test models" />

        <Button
            android:id="@+id/btn_real"
            style="@style/SvmBtnStyle"
            android:text="real data" />-->
    </LinearLayout>

</LinearLayout>
